<Window x:Class="Messenger_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger_Client"
        mc:Ignorable="d"
        Closed="CloseAll"
        Title="Telegraph Messenger" Height="400" Width="400" MinHeight="400" MinWidth="400" Style="{StaticResource mIRC_Font}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Name="TopTextBlock" FontSize="15" />
        <ListBox Grid.Row="1" Grid.Column="0" Name ="OnlineUsersList" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
            
        </ListBox>
        <Button Grid.Row="2" Name="Start_Chatting" Click="MakeChat">
            Start Chatting
        </Button>
    </Grid>
</Window>
